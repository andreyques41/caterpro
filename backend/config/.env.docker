# Environment variables for Docker-based validation
# Copy to .env or source before running integration tests against Docker

# Flask Configuration
FLASK_ENV=testing
FLASK_DEBUG=True
SECRET_KEY=docker-test-secret-key

# JWT Configuration
JWT_SECRET_KEY=docker-test-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Database Configuration (Docker Postgres on port 5433)
DB_USER=postgres
DB_PASSWORD=testpassword
DB_HOST=localhost
DB_PORT=5433
DB_NAME=lyftercook_docker

# Redis Configuration (Docker Redis on port 6380)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=testredispassword
REDIS_DB=0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Default Admin User
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@lyftercook.com
DEFAULT_ADMIN_PASSWORD=Admin123!@#

# Cloudinary (not needed for validation)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# SendGrid (not needed for validation)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@lyftercook.com
SENDGRID_FROM_NAME=LyfterCook
EMAIL_ENABLED=false

# Calendly (not needed for validation)
CALENDLY_API_KEY=
CALENDLY_USER_URI=

# Application URLs
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:5000
